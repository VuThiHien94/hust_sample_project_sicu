<div class="container center" style="margin-top:100px">
    <div class="thumbnail col-xs-8 col-xs-offset-2" style="padding: 10px 50px">
        <%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
            <h4>Change your profile image:</h4>
            <%= profile_avatar_select_profiles(@user) %>
            <div style="margin: 15px 230px;"><%= f.file_field :avatar, onChange: 'loadFile(event)' %></div>
            <h4>Update your information:</h4>
            <%= f.text_area :info, label: false, class: 'form-control form-margin', placeholder: 'Your info' %>
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
        <%end%>
    </div>
</div>