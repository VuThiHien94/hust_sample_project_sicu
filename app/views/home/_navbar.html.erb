<section>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path do%>
                <a class="navbar-brand" href="/">SICU</a>
                <% end %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="navbar" class="collapse navbar-collapse">
                <% if user_signed_in? %>
                    <ul class="nav navbar-nav">
                            <li>
                                <%= link_to "All Posts", posts_path%>
                            </li>
                            <li>
                                <%= link_to "Hi, "+current_user.user_name, profile_path(current_user.user_name) %>
                            </li>
                            <li>
                                <!--<i class="fa fa-cloud-upload"></i>-->
                                <%= link_to "",new_post_path, :class => "fa fa-cloud-upload fa-2x" %>
                            </li>
                            <li>
                                <%= link_to "", destroy_user_session_path, method: :delete, :class => "fa fa-sign-out fa-2x" %>
                            </li>
                            <%= render 'notifications/notification_dropdown' %>
                        </ul>
                    <% else %>
                        <ul class="nav navbar-nav">
                            <li>
                                <%= link_to "All Posts", posts_path%>
                            </li>
                            <li>
                                <%= link_to "Sign up", new_user_registration_path%>
                            </li>
                            <li>
                                <%= link_to "Sign in", new_user_session_path%>
                            </li>
                        </ul>
                    <% end %>
                <form class="navbar-form navbar-right">
                    <%= form_tag posts_path, :method => 'get' do %>
                      <p>
                        <%= text_field_tag :search, params[:search], class: 'form-control' %>
                        <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
                      </p>
                    <% end %>
                </form>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
</section>